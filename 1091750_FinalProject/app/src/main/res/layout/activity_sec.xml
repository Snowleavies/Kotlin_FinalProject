<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecActivity"

    android:background="@color/white">

    <TextView
        android:id="@+id/topic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號註冊"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="250dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/signpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密碼:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signaccount" />
    <TextView
        android:id="@+id/comfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認密碼:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signpassword" />

    <EditText
        android:id="@+id/acctext1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-5dp"
        android:hint="請輸入帳號"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/black"
        android:textColorHint="#ff143c"
        app:layout_constraintLeft_toRightOf="@id/signaccount"
        app:layout_constraintTop_toTopOf="@id/signaccount" />

    <EditText
        android:id="@+id/pwdtext1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-5dp"
        android:hint="請輸入密碼"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#ff143c"
        app:layout_constraintLeft_toRightOf="@id/signpassword"
        app:layout_constraintTop_toTopOf="@id/signpassword" />
    <EditText
        android:id="@+id/comfirmtext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-5dp"
        android:textColor="@color/black"
        android:hint="再次輸入密碼"
        android:textSize="15dp"

        android:textColorHint="#ff143c"
        app:layout_constraintLeft_toRightOf="@id/signpassword"
        app:layout_constraintTop_toTopOf="@id/comfirm" />

    <Button
        android:id="@+id/signin_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="註冊"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/signpassword"
        app:layout_constraintTop_toBottomOf="@id/comfirm"/>
    <Button
        android:id="@+id/fontpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:text="上一頁"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/signin_sec"
        app:layout_constraintTop_toBottomOf="@id/comfirm"/>

</androidx.constraintlayout.widget.ConstraintLayout>